<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Reto.Views.Page.SolicitudPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:convert="clr-namespace:Reto.Converts"
    Title="{Binding Title}"
    BackgroundColor="{DynamicResource ColorWhite}"
    NavigationPage.HasNavigationBar="True">
    <ContentPage.Resources>
        <convert:TextToColorConverter x:Key="colorConvert" />
    </ContentPage.Resources>
    <Grid RowDefinitions="Auto,*">
        <VerticalStackLayout Grid.Row="0">
            <Button
                Margin="10"
                BackgroundColor="{DynamicResource ColorBlue}"
                Command="{Binding AddSolicitudCommand}"
                CornerRadius="0"
                FontFamily="RobotoRegular"
                FontSize="14"
                HeightRequest="50"
                Text="Nueva Solicitud"
                TextColor="{DynamicResource ColorWhite}" />
        </VerticalStackLayout>
        <VerticalStackLayout
            Grid.Row="1"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="Fill">
            <CollectionView
                ItemSizingStrategy="MeasureAllItems"
                ItemsSource="{Binding ListSolicitudPieza}"
                SelectionMode="Single"
                VerticalScrollBarVisibility="Never">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout
                        Orientation="Vertical"
                        Span="1"
                        VerticalItemSpacing="5" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="10,0"
                            Padding="16,8"
                            Background="{DynamicResource ColorWhite}"
                            Stroke="{DynamicResource ColorBlack}"
                            StrokeShape="RoundRectangle 0,0,0,0"
                            StrokeThickness="2">
                            <VerticalStackLayout>
                                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto">
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        FontFamily="RobotoBlack"
                                        FontSize="16"
                                        Text="{Binding Id}"
                                        TextColor="{DynamicResource ColorBlack}" />
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontFamily="RobotoRegular"
                                        FontSize="16"
                                        Text="{Binding Vin, StringFormat='Vin: {0}'}"
                                        TextColor="{DynamicResource ColorBlack}" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        FontFamily="RobotoRegular"
                                        FontSize="16"
                                        Text="{Binding Pieza, StringFormat='Pieza: {0}'}"
                                        TextColor="{DynamicResource ColorBlack}" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        FontFamily="RobotoRegular"
                                        FontSize="16"
                                        Text="{Binding Cantidad, StringFormat='Cantidad: {0}'}"
                                        TextColor="{DynamicResource ColorBlack}" />
                                    <Label
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        FontFamily="RobotoRegular"
                                        FontSize="16"
                                        Text="{Binding Mecanico, StringFormat='MecÃ¡nico: {0}'}"
                                        TextColor="{DynamicResource ColorBlack}" />
                                    <Label
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        FontFamily="RobotoRegular"
                                        FontSize="16"
                                        Text="{Binding TallerSolicitado, StringFormat='Taller Solicitado: {0}'}"
                                        TextColor="{DynamicResource ColorBlack}" />
                                    <Label
                                        Grid.Row="3"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        FontFamily="RobotoRegular"
                                        FontSize="16"
                                        Text="{Binding FechaSolicitud, StringFormat='Fecha Solicitud: {0:dd/MM/yyyy}'}"
                                        TextColor="{DynamicResource ColorBlack}" />
                                </Grid>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Padding="10,5"
                                    BackgroundColor="{Binding EstatusSolicitud, Converter={StaticResource colorConvert}}"
                                    FontFamily="RobotoRegular"
                                    FontSize="16"
                                    HorizontalOptions="Start"
                                    HorizontalTextAlignment="Start"
                                    Text="{Binding EstatusSolicitud}"
                                    TextColor="{DynamicResource ColorWhite}"
                                    VerticalOptions="Start"
                                    VerticalTextAlignment="Start" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>

    </Grid>
</ContentPage>